            <div class="template-number">3</div>
            <div class="template-content">
                <img src="../Images/Template3.jpg" alt="Mall 3 Preview" class="template-preview" />
            </div>            
        </div>

        <div class="template-item" @onclick="() => OnTemplateSelected(4)">
