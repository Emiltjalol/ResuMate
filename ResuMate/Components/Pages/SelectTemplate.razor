@page "/select-template"
@inject NavigationManager Navigation
@attribute [Authorize]
@rendermode InteractiveServer

<div class="template-selection-container">

    <div class="template-header">
        <h1>Välj en mall</h1>
        <p>Här kan du välja vilken mall som passar just dig .</p>
    </div>

    <div class="template-list">
        <div class="template-item" @onclick="() => OnTemplateSelected(1)">
            <div class="template-number">1</div>
            <div class="template-content">
                <img src="../Images/Template1.jpg" alt="Mall 1 Preview" class="template-preview" />
            </div>           
        </div>

